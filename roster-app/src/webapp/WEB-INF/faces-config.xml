<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
    <application>
        <variable-resolver>org.sakaiproject.jsf.app.SakaiVariableResolver</variable-resolver>
        <message-bundle>org.sakaiproject.tool.roster.bundle.Messages</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/roster/*</from-view-id>
        <navigation-case>
            <from-outcome>overview</from-outcome>
            <to-view-id>/roster/main.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>printFriendlyRoster</from-outcome>
            <to-view-id>/roster/printFriendlyRoster.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/roster/profile.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>options</from-outcome>
            <to-view-id>/roster/options.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pictures</from-outcome>
            <to-view-id>/roster/pictures.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <managed-bean>
        <managed-bean-name>services</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.roster.ServicesBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>rosterManager</property-name>
            <value>#{org_sakaiproject_api_app_roster_RosterManager}</value>
        </managed-property>
        <managed-property>
            <property-name>sectionAwareness</property-name>
            <value>#{org_sakaiproject_section_api_SectionAwareness}</value>
        </managed-property>
        <managed-property>
            <property-name>cmService</property-name>
            <value>#{org_sakaiproject_coursemanagement_api_CourseManagementService}</value>
        </managed-property>
        <managed-property>
            <property-name>authzService</property-name>
            <value>#{org_sakaiproject_authz_api_AuthzGroupService}</value>
        </managed-property>
        <managed-property>
            <property-name>toolManager</property-name>
            <value>#{org_sakaiproject_tool_api_ToolManager}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>prefs</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.roster.RosterPreferences</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>filter</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.roster.FilteredProfileListingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>services</property-name>
            <value>#{services}</value>
        </managed-property>
        <managed-property>
            <property-name>prefs</property-name>
            <value>#{prefs}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>overview</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.roster.RosterOverview</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>filter</property-name>
            <value>#{filter}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>pictures</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.roster.RosterPictures</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>filter</property-name>
            <value>#{filter}</value>
        </managed-property>
    </managed-bean>

    <!-- =================== Component to display richtext  ============== -->
    <component>
        <component-type>RosterDisplayHTML</component-type>
        <component-class>org.sakaiproject.jsf.roster.RosterDisplayHTMLComponent</component-class>
    </component>

    <render-kit>

        <renderer>
            <component-family>RosterDisplayHTML</component-family>
            <renderer-type>RosterDisplayHTMLRender</renderer-type>
            <renderer-class>org.sakaiproject.jsf.roster.RosterDisplayHTMLRender</renderer-class>
        </renderer>
        
        <renderer>
            <component-family>javax.faces.Command</component-family>
            <renderer-type>org.apache.myfaces.SortHeader</renderer-type>
            <renderer-class>org.sakaiproject.tool.section.jsf.HtmlSortHeaderRenderer</renderer-class>
        </renderer>

    </render-kit>

</faces-config>
